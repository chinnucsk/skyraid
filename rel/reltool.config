{sys, [
       {lib_dirs, ["../apps", "../deps"]},
       {erts, [{mod_cond, derived}, {app_file, strip}]},
       {app_file, strip},
       {rel, "skyraid", "1",
        [
         compiler,
         syntax_tools,
         kernel,
         stdlib,
         sasl,
         crypto,
         inets,
         public_key,
         ssl,
         runtime_tools,
         wx,
         observer,
         lager,
         mochiweb,
         oauth,
         webmachine,
         skyraid,
         skyraid_webmachine
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "skyraid"},
       {profile, embedded},
       {incl_cond, exclude},
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)",
                           "^erts.*/(doc|info|include|lib|man|src)"]},
       {excl_app_filters, ["\.gitignore"]},
       {app, compiler,   [{incl_cond, include}]},
       {app, syntax_tools,   [{incl_cond, include}]},
       {app, sasl,   [{incl_cond, include}]},
       {app, stdlib, [{incl_cond, include}]},
       {app, kernel, [{incl_cond, include}]},
       {app, crypto, [{incl_cond, include}]},
       {app, inets, [{incl_cond, include}]},
       {app, public_key, [{incl_cond, include}]},
       {app, ssl, [{incl_cond, include}]},
       {app, wx, [{incl_cond, include}]},
       {app, runtime_tools, [{incl_cond, include}]},
       {app, observer, [{incl_cond, include}]},
       {app, lager, [{incl_cond, include}]},
       {app, mochiweb, [{incl_cond, include}]},
       {app, oauth, [{incl_cond, include}]},
       {app, webmachine, [{incl_cond, include}]},
       {app, skyraid, [{incl_cond, include}]},
       {app, skyraid_webmachine, [{incl_cond, include}]}
      ]}.

{target_dir, "skyraid"}.

{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "files/skyraid", "bin/skyraid"},
           {copy, "files/skyraid.cmd", "bin/skyraid.cmd"},
           {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
           {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
           {template, "files/app.config", "etc/app.config"},
           {template, "files/vm.args", "etc/vm.args"}
          ]}.
